// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/kubernetes-helm-minikube
{
    "name": "Streaming anomaly detection workspace",
    // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu-20.04",
    "args": {
        "USERNAME": "vscode",
        "BUILDKIT_INLINE_CACHE": "0"
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "enableNonRootDocker": "true",
            "moby": "true",
            "runArgs": [
                "--init"
            ]
        },
        "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
            "version": "1.27.4",
            "helm": "3.12.3",
            "minikube": "1.31.1"
        },
        "ghcr.io/devcontainers-contrib/features/curl-apt-get:1": {},
        "ghcr.io/akhildevelops/devcontainer-features/apt:0": {},
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        },
        "ghcr.io/devcontainers-contrib/features/poetry:2": {},
        "ghcr.io/robbert229/devcontainer-features/opentofu:1": {},
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-kubernetes-tools.vscode-kubernetes-tools",
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-python.black-formatter",
                "ms-python.pylint",
                "github.copilot",
                "donjayamanne.githistory",
                "mhutchie.git-graph",
                "rangav.vscode-thunder-client",
            ],
        }
    },
    "mounts": [
        "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached"
    ],
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    // "forwardPorts": [],
    // Use 'postCreateCommand' to run commands after the container is created.
    "postCreateCommand": {
        "install_pyenv": ".devcontainers/scripts/install_pyenv.sh",
        "install_pyhon_versions": ".devcontainers/scripts/install-required-python-versions.sh",
        "install_java": ".devcontainers/scripts/install-java.sh",
    },
    // // Use 'postStartCommand' to run commands after the container is created like starting minikube.
    "postStartCommand": {
        "change_ssh_conf_own": "sudo chmod 600 /home/vscode/.ssh/config",
        "start_minikube": ". .devcontainer/scriptss/start_minikube.sh",
    }
    // Configure tool-specific properties.
    // "customizations": {},
    // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
    // "remoteUser": "root"
}